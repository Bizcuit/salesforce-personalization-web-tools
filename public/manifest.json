{
  "name": "WPM Launcher",
  "description": "Launcher for Salesforce Web Personalization Manager",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon-off.png"
  },
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "activeTab",
    "storage",
    "downloads",
    "webRequest",
    "contentSettings"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}